<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingRight="15dp"
    android:paddingLeft="60dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/time_et"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        android:text="21:06"/>
    <TextView
        android:id="@+id/message_body"
        android:layout_below="@+id/time_et"
        android:layout_alignRight="@+id/time_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_message"
        android:autoLink="web"
        android:textColor="#fff"
        android:padding="10dp"
        android:elevation="2dp"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:text="Placeholder fireBaseChatMessage"
        />


    <RelativeLayout
        android:id="@+id/heartLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_body"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/image_heart_red"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_heart_red"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/image_heart_white"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_heart_white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/count_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/image_heart_white"
            android:text="123" />

    </RelativeLayout>

</RelativeLayout>