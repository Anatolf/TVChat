<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/channel_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="channel"
        android:layout_alignBottom="@+id/number_et"
        android:layout_alignTop="@+id/number_et"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:paddingStart="10dp"
        android:background="@color/orange"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/url_et" />


    <TextView
        android:id="@+id/url_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="url"
        android:gravity="center_vertical"
        android:layout_toStartOf="@+id/number_et"
        android:layout_toLeftOf="@+id/number_et"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
         />

    <TextView
        android:id="@+id/number_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="number"
        android:layout_alignParentEnd="true"
        android:background="@color/red"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
         />

</RelativeLayout>